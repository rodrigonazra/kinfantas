// impuesto.cpp : Defines the entry point for the console application.
//

#include "stdafx.h"
#include "conio.h"
#include <iostream>
using namespace std;

int main()
{
	float sueldo,sueldobase,impuesto,renta;
		cout<<"Ingrese el monto de su Sueldo: ";
	    cin>> sueldo;
		cout<<"Ingrese el monto del Sueldo base: ";
		cin>> sueldobase;
        if(sueldo>2*sueldobase)
		{
		impuesto=(sueldo*0.13);
		renta=(sueldo*0.12);
        }
		else
		{
		impuesto=0;
		renta=0;
		}
			cout<<"el Impuesto de su sueldo es: "<<impuesto;
    		cout<<"\nla AFP de su sueldo es; "<<renta;
		getch();
	return 0;
}

