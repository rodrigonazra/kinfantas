#include "stdafx.h"
#include <iostream>
#include "conio.h"

using namespace std;
 
int main()
{ 
  float venta1,venta2,venta3,ingresototal;
  cout<<"Ingrese la venta del producto A por semana: ";
  cin>>venta1;
  cout<<"Ingrese la venta del producto b por semana: ";
  cin>>venta2;
  cout<<"Ingrese la venta del producto c por semana: ";
  cin>>venta3;
  ingresototal=(venta1+venta2+venta3)*4;
  cout<<"El ingreso total por mes es: "<<ingresototal;
  getch();

 return 0;
}
