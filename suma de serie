#include "stdafx.h"
#include "conio.h"
#include <iostream>
using namespace std;

int factorial (int f);
float potencia (float x,int N);


int main ()
{   float s,x;
	int N,i;
	cout<<"ingrese x: ";
	cin>>x;
	cout<<"ingrese N: ";
	cin>>N;
	s=0;
	for(i=1;i<=N;i++)
	{
		s=s+potencia(x,i)/factorial(i);
	}
	cout<<" la suma de la serie es:\n"<<s;
	getch();
	return 0;
	
}
float potencia(float x,int N)
{
	int p,i;
    p=1;
    for(i=1;i<=N;i++)
     {
    	p=p*x;
     }
    return p;
}

int factorial (int f)
{int i,p;
 p=1;
 for(i=1;i<=f;i++)

 {
	 p=p*i;
 }
 return p;
}
