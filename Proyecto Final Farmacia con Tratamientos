else if(reg.estado=='N') {
mostrarRegistrovend(reg,nroReg);
cout<<endl;
solicitarDatosvend(&reg);
fseek(ptr,(nroReg-1)*sizeof(reg),SEEK_SET);
fwrite(&reg,sizeof(struct regVendedor),1,ptr);
}
else cout<<"Registro Eliminado....";
