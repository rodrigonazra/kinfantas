		gets(reg->nombre);
	}while(strlen(reg->nombre)==0);
cout<<"Id Sucursal: ";
		cin>>reg->IdSucursal;
	
	cout<<"Id Vendedor: ";
		cin>>reg->IdVend;


		reg->estado='N';
}

