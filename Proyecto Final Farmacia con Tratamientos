int retornarposicionfecha(char fecha[]){
	FILE *ptr;
	regVenta reg;
	int posicion=0;
	ptr=fopen("venta.dat","rb");
	if(ptr!=NULL){

	fread(&reg,sizeof(reg),1,ptr);
	while(!feof(ptr) &&  !strcmp(fecha,reg.fecha))
	{
		posicion++;
		fread(&reg,sizeof(reg),1,ptr);
		
	}


}
	return posicion;
}




