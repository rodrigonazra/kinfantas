// calculo del area del triangulo.cpp : Defines the entry point for the console application.
//

#include "stdafx.h"
#include "conio.h"
#include <iostream>

using namespace std;



int main()
{
	int base,altura;
	float area;
	cout <<"Ingrese base: ";
	cin>> base;
	cout <<"Ingrese altura: ";
	cin>> altura;
	area=(base*altura)/2.0;
	cout<<"El area es : " << area;
	getch();
	return 0;
}

