// area por lados.cpp : Defines the entry point for the console application.
//

#include "stdafx.h"
#include "conio.h"
#include <iostream>
#include "math.h"

using namespace std;



int main()
{
	int lado1,lado2,lado3;
	float area,s;
	cout <<"Ingrese lado1: ";
	cin>> lado1;
	cout <<"Ingrese lado2: ";
	cin>> lado2;
	cout <<"Ingrese lado3: ";
	cin>> lado3;
	s=(lado1+lado2+lado3)/2.0;
	area=sqrt(s*(s-lado1)*(s-lado2)*(s-lado3));
	cout<< area;
	getch();

	return 0;
}

