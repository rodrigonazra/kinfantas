float promedio(int t)
{int prom,n;
 cout<<"ingrese el numero de personas: ";
 cin>>n;
 prom=t/n;
 return(prom);
}

void mostrar_matriz(int M[][],int n,int m)
{int i,j,n=3,m=3;
 for(i=0;i<n;i++)
  {for(j=0;j<m;j++)
   {cout<<"elemento: ";
    cout>>M[i][j];
   }
  }
}


void cargar_vec(V[],int n)
{int i;
 for(i=0;i<n;i++)
 {cout<<"ingrese digito: ";
  cin>>V[i];
 }
}

